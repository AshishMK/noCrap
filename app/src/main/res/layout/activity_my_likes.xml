<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".scenes.likeScene.MyLikesActivity">

    <data class="MyLikesActivityBinding">

        <variable
            name="status"
            type="com.x.nocrap.data.Status" />

        <variable
            name="handler"
            type="com.x.nocrap.scenes.likeScene.LikeActivityHandler" />

        <variable
            name="showControls"
            type="androidx.databinding.ObservableBoolean" />

        <variable
            name="showToolbar"
            type="androidx.databinding.ObservableBoolean" />

        <import type="android.view.View" />

        <variable
            name="entity"
            type="com.x.nocrap.scenes.homeScene.VideoEntity" />

        <variable
            name="utils"
            type="com.x.nocrap.utils.Utils.Companion" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/root"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="false">

            <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{showControls?View.VISIBLE:View.GONE}">

                <ImageView
                    android:id="@+id/emotion"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="@dimen/keyline_1_minus_8dp"
                    android:src="@{utils.getEmotion(entity.emotion)}"
                    app:layout_constraintBottom_toTopOf="@+id/guideLine"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideLine"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent=".49" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/grup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="playPauseMid,mute,crop" />

                <ImageView
                    android:id="@+id/playPauseMid"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/keyline_1_minus_8dp"
                    android:background="@drawable/circle_white"
                    android:onClick="@{handler::onPlayPauseClicked}"
                    android:scaleType="center"
                    android:src="@drawable/ic_baseline_pause_24"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/guideLine"
                    app:tint="@color/iconTintColor" />

                <ImageView
                    android:id="@+id/crop"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/circle_white"
                    android:onClick="@{handler::onCropVideo}"
                    android:scaleType="center"
                    android:src="@drawable/ic_baseline_crop_24"
                    app:layout_constraintBottom_toBottomOf="@+id/playPauseMid"
                    app:layout_constraintRight_toLeftOf="@+id/playPauseMid"
                    app:layout_constraintTop_toTopOf="@+id/playPauseMid"
                    app:tint="@color/iconTintColor" />

                <ImageView
                    android:id="@+id/mute"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="18dp"
                    android:background="@drawable/circle_white"
                    android:onClick="@{handler::onVolumeClicked}"
                    android:scaleType="center"
                    android:src="@drawable/ic_baseline_volume_off_24"
                    app:layout_constraintBottom_toBottomOf="@+id/playPauseMid"

                    app:layout_constraintLeft_toRightOf="@+id/playPauseMid"
                    app:layout_constraintTop_toTopOf="@+id/playPauseMid"
                    app:tint="@color/iconTintColor" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/likesList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/toolbar" />

            <include
                android:id="@+id/statusLay"
                layout="@layout/include_loading_layout"
                app:status="@{status}" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/colorPrimary"
                android:visibility="@{showControls || showToolbar ? View.VISIBLE:View.GONE}"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/backArrow"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:onClick="@{handler::onBackClick}"
                    android:scaleType="center"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:tint="@color/iconTintColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_vertical"
                    android:text="@string/my_likes"
                    android:textColor="@color/text_color_pri"
                    android:textSize="18sp"
                    app:layout_constraintLeft_toRightOf="@+id/backArrow" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/bottomSheet"
            layout="@layout/like_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{showControls?View.VISIBLE:View.GONE}"
            app:behavior_hideable="false"
            app:behavior_peekHeight="56dp"
            app:entity="@{entity}"
            app:handler="@{handler}"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            app:utils="@{utils}" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>