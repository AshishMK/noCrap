<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".scenes.homeScene.WalkThroughActivity">

    <data class="WalkThroughActivityBinding" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_mask3"
        android:padding="@dimen/keyline_1">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyline_1"
            android:layout_marginTop="@dimen/keyline_1"
            android:layout_marginEnd="@dimen/keyline_1"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:paddingTop="@dimen/keyline_1_minus_8dp"
            android:text="@string/walk_through_title"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_1"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:lineSpacingMultiplier="1.1"
            android:text="@string/walk_through_subtitle"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:typeface="sans"
            app:layout_constraintTop_toBottomOf="@+id/title" />


        <View
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/keyline_1"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/subTitle" />

        <ImageView
            android:id="@+id/animal"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/keyline_1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/ic_pawprint_fill"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/human"
            app:layout_constraintTop_toBottomOf="@+id/subTitle"
            app:tint="@color/darkGray" />

        <ImageView
            android:id="@+id/human"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/keyline_1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/ic_footprints"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/animal"
            app:layout_constraintRight_toLeftOf="@+id/image"
            app:layout_constraintTop_toBottomOf="@+id/subTitle"
            app:tint="@color/darkGray" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/keyline_1"
            android:scaleType="center"
            android:src="@drawable/ic_lotus"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/human"
            app:layout_constraintRight_toLeftOf="@+id/like"
            app:layout_constraintTop_toBottomOf="@+id/subTitle"
            app:tint="@color/darkGray" />

        <ImageView
            android:id="@+id/like"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/keyline_1"
            android:scaleType="center"
            android:src="@drawable/ic_love"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/image"
            app:layout_constraintRight_toLeftOf="@+id/swipe"
            app:layout_constraintTop_toBottomOf="@+id/subTitle"
            app:tint="@color/darkGray" />

        <ImageView
            android:id="@+id/swipe"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/keyline_1"
            android:scaleType="center"
            android:src="@drawable/ic_up_arrow"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/like"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subTitle"
            app:tint="@color/darkGray" />

        <TextView
            android:id="@+id/point1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_1"
            android:drawableLeft="@drawable/ic_pawprint_fill"
            android:drawablePadding="@dimen/keyline_1_minus_8dp"
            android:drawableTint="@color/white"
            android:fontFamily="sans-serif"
            android:text="@string/point1"
            android:textColor="@color/white"
            android:typeface="sans"
            app:layout_constraintTop_toBottomOf="@+id/animal"
            app:tint="@color/darkGray" />

        <TextView
            android:id="@+id/point2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_1"
            android:drawableLeft="@drawable/ic_footprints"
            android:drawablePadding="@dimen/keyline_1_minus_8dp"
            android:drawableTint="@color/white"
            android:fontFamily="sans-serif"
            android:text="@string/point2"
            android:textColor="@color/white"
            android:typeface="sans"
            app:layout_constraintTop_toBottomOf="@+id/point1"
            app:tint="@color/darkGray" />

        <TextView
            android:id="@+id/point3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_1"
            android:drawableLeft="@drawable/ic_lotus"
            android:drawablePadding="@dimen/keyline_1_minus_8dp"
            android:drawableTint="@color/white"
            android:fontFamily="sans-serif"
            android:text="@string/point3"
            android:textColor="@color/white"
            android:typeface="sans"
            app:layout_constraintTop_toBottomOf="@+id/point2"
            app:tint="@color/darkGray" />

        <TextView
            android:id="@+id/point4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_1"
            android:drawableLeft="@drawable/ic_love"
            android:drawablePadding="@dimen/keyline_1_minus_8dp"
            android:drawableTint="@color/white"
            android:fontFamily="sans-serif"
            android:text="@string/point4"
            android:textColor="@color/white"
            android:typeface="sans"
            app:layout_constraintTop_toBottomOf="@+id/point3"
            app:tint="@color/darkGray" />

        <TextView
            android:id="@+id/point5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_1"
            android:drawableLeft="@drawable/ic_up_arrow"
            android:drawablePadding="@dimen/keyline_1_minus_8dp"
            android:drawableTint="@color/white"
            android:fontFamily="sans-serif"
            android:text="@string/point5"
            android:textColor="@color/white"
            android:typeface="sans"
            app:layout_constraintTop_toBottomOf="@+id/point4"
            app:tint="@color/darkGray" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/keyline_1"
            android:onClick="onFinishClick"
            android:paddingStart="@dimen/keyline_1"
            android:paddingEnd="@dimen/keyline_1"
            android:text="@string/finish"
            android:textColor="@color/darkGray"
            app:backgroundTint="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/point5" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>